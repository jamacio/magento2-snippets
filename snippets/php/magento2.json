  "logger_custom": {
    "prefix": "m2.logger_custom",
    "body": [
      "\\$writer = new \\Zend_Log_Writer_Stream(BP . '/var/log/${1:custom}.log');",
      "\\$logger = new \\Zend_Log();",
      "\\$logger->addWriter(\\$writer);",
      "\\$logger->info('${2:text message}');"
    ]
  },
